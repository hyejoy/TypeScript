{
  "compilerOptions": {
    // 📌 변환된 자바스크립트들이 사용할 자바스크립트 버전 명시
    "target": "ESNext",
    "skipLibCheck": true,
    // 📌 변환된 자바스크립트들이 사용할 모듈시스템 명시
    "module": "ESNext",
    // 📌 컴파일되는 파일은 해당 폴더로 저장함
    "outDir": "dist",
    // 📌추론되지않는 변수의 타입을 명시하지않으면 오류발생됨
    "strict": true,
    // 📌 파일을 전역모듈 취급 -> 로컬(독립)모듈로 취급
    "moduleDetection": "force"
  },
  "ts-node": {
    "esm": true
  },
  //📌 여기에 속하는 파일들을 컴파일을 진행함
  "include": ["src"]
}
